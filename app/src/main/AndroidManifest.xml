<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noah.photonext">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CollageActivity" />
        <activity
            android:name=".activity.PickPhotoActivity"
            android:configChanges="orientation" />
        <activity android:name=".activity.ResultActivity" />
        <activity android:name=".activity.EditActivity" />
        <activity android:name=".activity.CropActivity"/>
        <activity android:name=".activity.RotateActivity"/>
        <activity android:name=".activity.AutoFixActivity"/>
        <activity android:name=".activity.AdjustmentActivity"/>
        <activity android:name=".activity.BlurActivity"/>
        <activity android:name=".activity.AutoContrastActivity"/>
        <activity android:name=".activity.SmoothActivity"/>
        <activity android:name=".activity.SharpenActivity"/>
        <activity android:name=".activity.DoubleActivity"/>
    </application>

</manifest>
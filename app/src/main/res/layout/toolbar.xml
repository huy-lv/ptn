<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    android:gravity="center_vertical"
    android:minHeight="?attr/actionBarSize"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light">


    <ImageView
        android:id="@+id/toolbar_back_iv"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/toolbar_icon_padding"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/ic_back" />

    <TextView
        android:id="@+id/toolbar_title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/toolbar_clear_iv"
        android:layout_toRightOf="@+id/toolbar_back_iv"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="25sp" />


    <ImageView
        android:visibility="gone"
        android:id="@+id/toolbar_clear_iv"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/toolbar_icon_padding"
        android:layout_toLeftOf="@+id/toolbar_next_iv"
        android:src="@drawable/ic_clear_black_24dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/toolbar_undo_iv"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_toLeftOf="@+id/toolbar_redo_iv"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/toolbar_icon_padding"
        android:src="@drawable/ic_undo_black_24dp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/toolbar_redo_iv"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_toLeftOf="@id/toolbar_next_iv"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/toolbar_icon_padding"
        android:src="@drawable/ic_redo_black_24dp" />


    <ImageView
        android:id="@+id/toolbar_next_iv"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/toolbar_icon_padding"
        android:src="@mipmap/ic_next" />
</RelativeLayout>